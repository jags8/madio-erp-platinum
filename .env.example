# ========================================
# APPLICATION
# ========================================
ENVIRONMENT=production
DEBUG=False
APP_NAME="Madio ERP Platinum"
API_BASE_URL=https://api.erp.madio.in
PORT=8000

# ========================================
# SECURITY
# ========================================
JWT_SECRET_KEY=change-this-to-64-character-random-string
JWT_REFRESH_SECRET_KEY=change-this-to-different-64-character-random-string
JWT_ALGORITHM=HS256

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"

# ========================================
# DATABASE
# ========================================
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/madio_erp?retryWrites=true&w=majority
MONGODB_DATABASE=madio_erp_production
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# ========================================
# REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# WHATSAPP BUSINESS API
# ========================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=random_token_for_webhook_verification
WHATSAPP_API_VERSION=v21.0

# Get these from: https://developers.facebook.com/apps/

# ========================================
# SHAREPOINT / MICROSOFT GRAPH
# ========================================
SHAREPOINT_TENANT_ID=your_tenant_id
SHAREPOINT_CLIENT_ID=your_app_client_id
SHAREPOINT_CLIENT_SECRET=your_app_client_secret
SHAREPOINT_SITE_ID=your_sharepoint_site_id

# Get these from: https://portal.azure.com
# Azure AD > App registrations > New registration
# Grant permissions: Sites.ReadWrite.All, Files.ReadWrite.All

# ========================================
# CORS
# ========================================
ALLOWED_ORIGINS=https://erp.madio.in,https://app.madio.in

# ========================================
# EMAIL / SMTP
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@madio.in
SMTP_PASSWORD=your_app_password
ALERT_RECIPIENTS=admin@madio.in,ops@madio.in

# For Gmail: Enable 2FA and create App Password

# ========================================
# MONITORING
# ========================================
SENTRY_DSN=
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true

# ========================================
# ALERTING
# ========================================
WHATSAPP_ALERT_NUMBERS=+919876543210
ALERT_EMAIL_ENABLED=true
ALERT_WHATSAPP_ENABLED=true

# ========================================
# GRAFANA
# ========================================
GRAFANA_PASSWORD=change_this_password

# ========================================
# BACKUP
# ========================================
BACKUP_ENABLED=true
S3_BACKUP_BUCKET=madio-erp-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
